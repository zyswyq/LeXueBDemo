<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dllo.lexuebdemo.view.MainActivity">
    <!--最外层框架-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/radiogroup_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_tab_height"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobtn_main"
            style="@style/main_radiobutton"
            />

        <RadioButton
            android:id="@+id/radiobtn_teacher"
            style="@style/main_radiobutton" />

        <RadioButton
            android:id="@+id/radiobtn_find"
            style="@style/main_radiobutton" />

        <RadioButton style="@style/main_radiobutton"
            android:id="@+id/radioButton" />


        <RadioButton
            android:id="@+id/radiobtn_my"
            style="@style/main_radiobutton" />

    </RadioGroup>

</LinearLayout>
