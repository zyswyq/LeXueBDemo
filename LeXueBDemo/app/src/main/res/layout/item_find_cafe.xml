<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cafe_type"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:drawableLeft="@mipmap/coffee_topposts_icon"
        android:drawablePadding="5dp"
        android:text="置顶"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone" />

    <View
        android:id="@+id/view_coffee_jiange"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#d6d6d6"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_cafe_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/tv_cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_cafe_head"
            android:layout_toRightOf="@id/img_cafe_head"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/coffee_sex_unknow"
            android:text="张刚"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cafe_name"
            android:layout_toRightOf="@id/img_cafe_head"
            android:text="30分钟前"
            android:textColor="@color/grayText"

            android:textSize="12sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/home_navigation_arrow_down" />

        <TextView
            android:id="@+id/tv_cafe_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_cafe_head"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_cafe_head"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/linear_cafe_img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cafe_content"
            android:layout_toRightOf="@id/img_cafe_head"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.example.dllo.lexuebdemo.customview.SmoothImageView
                android:id="@+id/img_cafe_img1"
                style="@style/cafee_img" />

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img2"
                style="@style/cafee_img" />

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img3"
                style="@style/cafee_img" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_cafe_img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_cafe_img1"
            android:layout_toRightOf="@id/img_cafe_head"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img4"
                style="@style/cafee_img" />

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img5"
                style="@style/cafee_img" />

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img6"
                style="@style/cafee_img" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_cafe_img3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_cafe_img2"
            android:layout_toRightOf="@id/img_cafe_head"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img7"
                style="@style/cafee_img" />

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img8"
                style="@style/cafee_img" />

            <com.example.dllo.lexuebdemo.customview.SmoothImageView

                android:id="@+id/img_cafe_img9"
                style="@style/cafee_img" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cafe_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_cafe_img3"
            android:layout_toRightOf="@id/img_cafe_head"
            android:drawableLeft="@mipmap/list_coffee_praise_normal"
            android:drawablePadding="5dp"
            android:text="赞" />

        <TextView
            android:id="@+id/tv_cafe_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_cafe_img3"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_cafe_agree"
            android:drawableLeft="@mipmap/list_coffee_reply_grey"
            android:drawablePadding="5dp"
            android:text="评论" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/linear_cafe_img3"
            android:layout_marginRight="5dp"
            android:drawableLeft="@mipmap/list_coffee_share_normal"
            android:drawablePadding="5dp"
            android:text="转发" />

    </RelativeLayout>

</LinearLayout>