<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_item_comment_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin10"/>
    <TextView
        android:id="@+id/tv_item_comment_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="皇上啊"
        android:textSize="@dimen/tvsize12"
        android:layout_toEndOf="@id/iv_item_comment_head"
        android:layout_alignTop="@id/iv_item_comment_head"/>
    <TextView
        android:id="@+id/tv_item_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="good"
        android:textSize="@dimen/tvsize12"
        android:layout_below="@id/tv_item_comment_nickname"
        android:layout_toEndOf="@id/iv_item_comment_head"
        android:textColor="@color/pureBlack"/>
    <TextView
        android:id="@+id/tv_item_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-03-14"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/tvsize12"
        android:layout_below="@id/tv_item_comment_content"
        android:layout_toEndOf="@id/iv_item_comment_head"/>
    <TextView
        android:id="@+id/tv_item_comment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_item_comment_time"
        android:textSize="@dimen/tvsize12"
        android:text="好评"
        android:layout_marginEnd="@dimen/margin10"
        android:layout_marginBottom="@dimen/margin10"/>
</RelativeLayout>