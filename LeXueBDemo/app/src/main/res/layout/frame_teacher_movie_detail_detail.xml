<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin10">


        <LinearLayout
            android:id="@+id/layout_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:text="羁绊完结篇&amp;极值点偏移(上) 数学二轮复习(十一)"
                android:textColor="@color/pureBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_course_real_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:drawablePadding="@dimen/padding5"
                    android:drawableStart="@mipmap/money_icon"
                    android:text="30"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/tvsize20" />

                <TextView
                    android:id="@+id/tv_course_real_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:background="@color/orange"
                    android:drawablePadding="@dimen/padding5"
                    android:padding="@dimen/padding3"
                    android:text="免费"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_course_real_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin10"
                    android:text="(有效期:90天)"
                    android:textSize="@dimen/tvsize12" />

                <TextView
                    android:id="@+id/tv_course_real_playtimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin10"
                    android:drawablePadding="@dimen/padding3"
                    android:drawableStart="@mipmap/home_play_icon"
                    android:text="1488"
                    android:textSize="@dimen/tvsize12" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_teacher_movie_detail_spot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout_course_title"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_movie_detail_spot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin15"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginTop="@dimen/margin15"
                android:drawableStart="@drawable/frame_movie_detail_spot_selector"
                android:text="240人赞"
                android:textSize="@dimen/tvsize12" />

            <ImageView
                android:id="@+id/course_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin15"
                android:src="@drawable/frame_movie_detail_download_selector" />

            <ImageView
                android:id="@+id/course_shared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_toLeftOf="@id/course_download"
                android:src="@drawable/frame_movie_detail_shared_selector" />

            <ImageView
                android:id="@+id/course_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_toLeftOf="@id/course_shared"
                android:src="@drawable/frame_movie_detail_collect_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_course_retroduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_teacher_movie_detail_spot"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:text="课程简介"
                android:textColor="@color/pureBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin10"
                android:background="@color/mainblue"
                android:padding="@dimen/padding5"
                android:text="免费下载讲义"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_course_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_course_retroduce"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin10"
                android:background="@color/grayWhite2"
                android:padding="@dimen/padding3"
                android:text="精讲"
                android:textSize="@dimen/tvsize10" />

            <TextView
                android:id="@+id/tv_course_video_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin5"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:text="#哈尼英语陪睡课"
                android:textSize="@dimen/tvsize12" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/course_bottombar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout_course_detail"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_movie_teacher_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/margin10"
                android:background="#000" />

            <TextView
                android:id="@+id/iv_movie_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_movie_teacher_head"
                android:layout_toRightOf="@id/iv_movie_teacher_head"
                android:text="巴哈"
                android:textColor="@color/pureBlack" />

            <TextView
                android:id="@+id/course_video_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_movie_teacher_name"
                android:layout_toRightOf="@+id/iv_movie_teacher_head"
                android:text="视频数: 69"
                android:textSize="@dimen/tvsize12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin10"
                android:layout_marginEnd="@dimen/margin10"
                android:drawablePadding="@dimen/padding3"
                android:drawableStart="@mipmap/tab_teache_follow_normal"
                android:gravity="center"
                android:text="@string/focus"
                android:textColor="@color/gray" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>