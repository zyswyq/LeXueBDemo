<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

    <ImageView
        android:id="@+id/item_home_volunteer_iv"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_margin="@dimen/margin10"
        android:background="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/item_home_volunteer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin15"
        android:background="@drawable/home_home_text_border"
        android:text="志愿"
        android:textColor="@color/black"
        android:textSize="@dimen/tvsize7"/>

    <LinearLayout
        android:id="@+id/item_home_volunteer_size"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="@dimen/margin10"
        android:layout_toRightOf="@+id/item_home_volunteer_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_volunteer_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdasdas"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/item_home_volunteer_teacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="aaaaaa"

                android:textColor="@color/black"
                android:textSize="10sp"


                />

            <TextView


                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="丨"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/item_home_volunteer_person"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1111"
                android:textSize="10sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="次播放"
                android:textSize="10sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_home_volunteer_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_home_text_border"
            android:text="aaaa"
            android:textSize="10sp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_home_volunteer_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_home_volunteer_size"
        android:background="@drawable/dotted_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_home_volunteer_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_home_volunteer_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="免费"
            android:textColor="@color/origen"
            />

        <TextView
            android:id="@+id/item_home_volunteer_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已购买"
            android:textSize="10sp"
            />

    </LinearLayout>
</RelativeLayout>